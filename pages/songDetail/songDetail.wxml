<!--pages/songDetail/songDetail.wxml-->
<view class="songDetailContainer">

<view class="musicAuthor">{{song.ar[0].name}}</view>
<view class="circle"></view>

<!-- 摇杆 -->
<image class="needle {{isPlay && 'needleRotate'}}" src="/static/img/song/needle.png"></image>
<!-- 磁盘 -->
<view class="discContainer {{isPlay && 'discAnimation'}}">
  <image class="disc" src="/static/img/song/disc.png"></image>
  <!-- 歌曲封面图 -->
  <image class="musicImg" src="{{song.al.picUrl}}"></image>
</view>
<!-- 歌词 -->
<view class="scrollLrc">
  <text>{{currentLyric}}</text>
</view>
<!-- 进度条控制 -->
<view class="progressControl">
  <text>{{currentTime}}</text>
  <!-- 总进度条 -->
  <view class="barControl">
    <!-- 实时进度条 -->
    <view class="audio-currentTime-Bar" style="width: {{currentWidth + 'rpx'}}">
      <!-- 小圆球 -->
      <view class="audio-circle"></view>
    </view>
  </view>
  <text>{{durationTime}}</text>
</view>

<!-- 歌曲播放控制 -->
<view class="musicControl">
  <text class="iconfont icon-suijibofang"></text>
  
  <text class="iconfont icon-shangyiqu" id="pre" bindtap="handleSwitch"></text>

  <text class="iconfont {{isPlay ? 'icon-bofangzhong' : 'icon-zanting'}} big" bindtap="handleMusicPlay"></text>

  <text class="iconfont icon-xiayiqu" id="next" bindtap="handleSwitch"></text>

  <text class="iconfont icon-bofangduilie"></text>
</view>

</view>
